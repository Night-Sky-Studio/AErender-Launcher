<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:AErenderLauncher"
             xmlns:theme="clr-namespace:AErenderLauncher.Theme;assembly=AErenderLauncher.Theme"
             x:Class="AErenderLauncher.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <NativeMenu.Menu>
        <NativeMenu>
            <NativeMenuItem Header="About" Click="AboutMenu_OnClick" />
            <NativeMenuItem Header="Check for updates" />
            <NativeMenuItemSeparator />
            <NativeMenuItem Header="Settings" />
            <NativeMenuItemSeparator />
            <NativeMenuItem Header="Quit AErender Launcher" />
        </NativeMenu>
    </NativeMenu.Menu>
             
    <Application.Styles>
        <!-- <SimpleTheme /> -->
        <theme:AErenderLauncherTheme />
    </Application.Styles>
             
    <Application.Resources>
        <FontFamily x:Key="JetBrainsMono">avares://AErenderLauncher/Assets/Fonts#JetBrains Mono</FontFamily>
    </Application.Resources>
</Application>