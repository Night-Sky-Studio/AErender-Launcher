    <!-- TextBlock and Link -->
    <Style Selector="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI"/>
    </Style>
    
    <Style Selector="TextBlock.Link">
        <Setter Property="Foreground" Value="#1E90FF" />
        <Setter Property="TextDecorations" Value="Underline" />
        <Setter Property="IsHitTestVisible" Value="True" />
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontSize" Value="13" />
    </Style>
    
    <Style Selector="TextBlock.Link:pointerover">
        <Setter Property="Foreground" Value="#00BFFF" />
    </Style>
    
    <Style Selector="TextBlock.Link:pressed">
        <Setter Property="Foreground" Value="#17579C" />
    </Style>
    
    <!-- Font -->
    <Style Selector="Label, TextBox, ComboBox, CheckBox">
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontSize" Value="12" />
    </Style>
    
    <!-- Button style -->
    <Style Selector="Button">
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Label Content="{TemplateBinding Content}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0"/>
                </Border>
            </ControlTemplate>
        </Setter>
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="Background" Value="#202020"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="MinHeight" Value="24"/>
    </Style>
    
    <Style Selector="Button.IconButton">
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Label Content="{TemplateBinding Content}" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="0"/>
                </Border>
            </ControlTemplate>
        </Setter>
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="Background" Value="#202020"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="MinHeight" Value="24"/>
    </Style>
     
    <Style Selector="Button:pressed">
        <Setter Property="RenderTransform" Value="none" />
    </Style>
 
    <Style Selector="Button:focus">
        <Setter Property="Background" Value="#2A82E2"/>
    </Style>
     
    <Style Selector="Button:focus:pointerover">
        <Setter Property="Background" Value="#2A82E2"/>
    </Style>
          
    <Style Selector="Button:pointerover:not(:focus)">
        <Setter Property="Background" Value="#404040"/>
    </Style>
     
    <Style Selector="Button:pressed">
        <Setter Property="Background" Value="#17579C"/>
    </Style>
    
    <!-- Toolbar -->
    <Style Selector="Border.Toolbar">
        <Setter Property="Background" Value="#252525"/>
        <Setter Property="BorderBrush" Value="#151515" />
        <Setter Property="BorderThickness" Value="0 0 0 1" />
    </Style>
    
    <!-- Statusbar -->
    <Style Selector="Border.Statusbar">
        <Setter Property="Background" Value="#252525"/>
        <Setter Property="BorderBrush" Value="#151515" />
        <Setter Property="BorderThickness" Value="0 1 0 0" />
    </Style>
    
    <!-- TextBox -->
    <Style Selector="TextBox">
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Background" Value="#202020"/>
        <Setter Property="BorderBrush" Value="#151515"/>
        <Setter Property="SelectionBrush" Value="#2A82E2"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="MinHeight" Value="24"/>
        <Setter Property="Padding" Value="4 2 2 2"/>
    </Style>
    
    <Style Selector="TextBox:pointerover:not(:focus) /template/ Border#PART_BorderElement">
        <Setter Property="Background" Value="#202020"/>
        <Setter Property="BorderBrush" Value="#4C4C4C"/>
    </Style>
    
    <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
        <Setter Property="Background" Value="#202020"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#2A82E2"/>
    </Style>
    
    <!-- ButtonSpinner -->
    <Style Selector="ButtonSpinner">
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="MinHeight" Value="24" />
        <Setter Property="BorderBrush" Value="#151515" />
    </Style>
    
    <Style Selector="ButtonSpinner:focus">
        <Setter Property="BorderBrush" Value="#2A82E2" />
    </Style>
    
    <Style Selector="ButtonSpinner /template/ StackPanel#PART_SpinnerPanel">
        <Setter Property="Margin" Value="1 0 0 0" />
    </Style>
    
    <Style Selector="ButtonSpinner /template/ StackPanel#PART_SpinnerPanel RepeatButton">
        <Setter Property="BorderBrush" Value="Black" />
    </Style>
    
    <!-- NumericUpDown -->
    <Style Selector="NumericUpDown">
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="Background" Value="#202020" />
        <Setter Property="BorderBrush" Value="#151515" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="MinHeight" Value="24" />
        <Setter Property="Padding" Value="4 2 2 2" />
    </Style>
    
    <!-- ComboBox -->
    <Style Selector="ComboBox">
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="Background" Value="#202020" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="MaxHeight" Value="24" />
        <Setter Property="Padding" Value="2"/>
    </Style>
    
    <Style Selector="ComboBox:pointerover /template/ Border#Background">
        <Setter Property="Background" Value="#404040"/>
    </Style>
    
    <Style Selector="ComboBox:pressed /template/ Border#Background">
        <Setter Property="Background" Value="#17579C"/>
    </Style>
    
    <Style Selector="ComboBox:focus:not(:pressed) /template/ Border#Background">
        <Setter Property="Background" Value="#2A82E2"/>
    </Style>
    
    <!-- CheckBox -->
    <Style Selector="CheckBox">
        <Setter Property="Template">
            <ControlTemplate>
                <Grid ColumnDefinitions="16,*" Height="16" Margin="0">
                    <Border Name="Outer" Grid.Column="0" Width="16" Height="16" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1">
                        <Border Name="Inner" Width="12" Height="12" Background="{TemplateBinding Background}"/>
                    </Border>
                    <ContentPresenter Grid.Column="1" Content="{TemplateBinding Content}" VerticalAlignment="Center" Margin="4 0 0 0" />
                </Grid>
            </ControlTemplate>
        </Setter>
        <Setter Property="Height" Value="16" />
        <Setter Property="Background" Value="#202020" />
        <Setter Property="BorderBrush" Value="#151515" />
        <Setter Property="Padding" Value="0" />
    </Style>
    
    <Style Selector="CheckBox /template/ Border#Inner">
        <Setter Property="Background" Value="Transparent"/>
    </Style>
    
    <Style Selector="CheckBox:pointerover /template/ Border#Outer">
        <Setter Property="Background" Value="#404040" />
    </Style>
    <Style Selector="CheckBox:pointerover /template/ Border#Inner">
        <Setter Property="Background" Value="#404040" />
    </Style>
    
    <Style Selector="CheckBox:checked /template/ Border#Outer">
        <Setter Property="BorderBrush" Value="#2A82E2" />
    </Style>
    <Style Selector="CheckBox:checked /template/ Border#Inner">
        <Setter Property="Background" Value="#2A82E2" />
    </Style>
    
    <Style Selector="Expander">
        <Setter Property="CornerRadius" Value="0" />
        <!-- <Setter Property="Padding" Value="4"/> -->
        <Setter Property="Background" Value="#202020" />
        <Setter Property="BorderBrush" Value="#151515" />
        <Setter Property="Margin" Value="0"/>
    </Style>
    
    <Style Selector="Expander /template/ Border#ToggleButtonBackground">
        <Setter Property="BorderBrush" Value="#151515" />
        <Setter Property="Background" Value="#202020" />
    </Style>
    
    <Style Selector="Expander /template/ ToggleButton#ExpanderHeader">
        <!-- <Setter Property="Height" Value="24" /> -->
        <Setter Property="Padding" Value="0"/>
    </Style>
    
