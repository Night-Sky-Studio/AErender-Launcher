<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="GroupBoxControl"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AErenderLauncher.Controls.GroupBox" Stroke="White" Title="Group Box">
    
    <Grid RowDefinitions="Auto,*" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <TextBlock Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="8"
                   Text="{Binding ElementName=GroupBoxControl, Path=Title}" 
                   Foreground="{Binding ElementName=GroupBoxControl, Path=Foreground}"/>
        <Rectangle x:Name="Separator" Grid.Row="0" VerticalAlignment="Bottom" Height="1" Margin="8 0"
                   Fill="{Binding ElementName=GroupBoxControl, Path=Stroke}"/>
        <ContentControl Grid.Row="1" Content="{Binding ElementName=GroupBoxControl, Path=Items}" Margin="8 0" />
    </Grid>
</UserControl>
